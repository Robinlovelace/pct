isbn = {07493797},
issn = {07493797},
journal = {American Journal of Preventive Medicine},
number = {3},
pages = {282--288},
pmid = {23953354},
title = {{Active travel to work and cardiovascular risk factors in the united kingdom}},
volume = {45},
